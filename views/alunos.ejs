<!-- Wappler include head-page="layouts/dashboard" fontawesome_5="cdn" bootstrap5="custom" is="dmx-app" id="alunos" appConnect="local" components="{dmxBootstrap5Navigation:{}}" -->
<dmx-serverconnect id="sc_todos_alunos" url="/api/usuarios/listar_usuarios"></dmx-serverconnect>
<meta name="ac:route" content="/alunos">
<main class="">
    <div class="main-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Total de alunos</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Alunos</li>
                    </ol>
                </nav>
            </div>
            <div class="ms-auto">
                <div class="btn-group">
                    <div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-end"> <a class="dropdown-item" href="javascript:;">Action</a>
                        <a class="dropdown-item" href="javascript:;">Another action</a>
                        <a class="dropdown-item" href="javascript:;">Something else here</a>
                        <div class="dropdown-divider"></div> <a class="dropdown-item" href="javascript:;">Separated link</a>
                    </div>
                </div>
            </div>
        </div>
        <!--end breadcrumb-->


        <div class="row g-3">
            <div class="col-auto">
                <div class="position-relative">
                    <input class="form-control px-5" type="search" placeholder="Pesquise o aluno">
                    <span class="material-icons-outlined position-absolute ms-3 translate-middle-y start-0 top-50 fs-5">search</span>
                </div>
            </div>
        </div><!--end row-->

        <div class="card mt-4">
            <div class="card-body">
                <div class="customer-table">
                    <div class="table-responsive white-space-nowrap">
                        <table class="table align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Nome do Aluno</th>
                                    <th>Email</th>
                                    <th>Contato</th>
                                </tr>
                            </thead>
                            <tbody is="dmx-repeat" id="repeat_todos_alunos" dmx-bind:repeat="sc_todos_alunos.data.query_listar_usuarios.data" key="id">
                                <tr>
                                    <td>
                                        <a class="d-flex align-items-center gap-3" href="javascript:;">
                                            <div class="customer-pic">
                                                <img src="assets/images/avatars/01.png" class="rounded-circle" width="40" height="40" alt="" dmx-bind:src="foto">
                                            </div>
                                            <p class="mb-0 customer-name fw-bold">{{nome}}</p>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="javascript:;" class="font-text1">{{email}}</a>
                                    </td>
                                    <td>{{telefone}}</td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>


    </div>
</main>