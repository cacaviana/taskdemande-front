<body class="bg-reset-password">

    <!--authentication-->
    <div class="auth-basic-wrapper d-flex align-items-center justify-content-center">
        <div class="container my-5 my-lg-0">
            <div class="row">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5 col-xxl-4 mx-auto">
                    <div class="card rounded-4 mb-0 border-top border-4 border-primary border-gradient-1">
                        <div class="card-body p-5">
                            <img src="/assets/images/logoitva.png" class="mb-4" width="145" alt="">
                            <h4 class="fw-bold">Resete a sua senha</h4>
                            <p class="mb-0">Cadastre uma nova senha!</p>
                            <div class="form-body mt-4">
                                <form class="row g-4" id="sc_resetar_senha" is="dmx-serverconnect-form" method="post" action="/api/usuarios/resetar_senha" dmx-on:success="notifies1.success('Senha resetada com sucesso!');browser1.goto('/usuarios/login-user')" dmx-on:forbidden="notifies1.danger('Falha ao resetar a senha');browser1.goto('/usuarios/login-user')">
                                    <input id="inp_token" name="token" type="hidden" class="form-control" dmx-bind:value="query.token">
                                    <div class="col-12">
                                        <label class="form-label" for="inp_senha1">Nova senha</label>
                                        <input type="password" class="form-control" id="inp_senha1" placeholder="Sua senha nova" name="senha1">
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label" for="senha">Confirme a senha</label>
                                        <input type="password" class="form-control" id="senha" placeholder="Confirme a senha" name="senha">
                                    </div>
                                    <div class="col-12">
                                        <div class="d-grid gap-2">
                                            <button type="submit" class="btn btn-grd-info">Restaurar senha</button>
                                            <a href="auth-basic-login.html" class="btn btn-grd-royal">Voltar para o login</a>
                                        </div>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div><!--end row-->
        </div>
    </div>

</html>