<dmx-notifications id="notifies1"></dmx-notifications>
<meta name="ac:route" content="/usuarios/add-user">
<div class="container">
    <div class="row">
        <div class="col">
            <form is="dmx-serverconnect-form" id="serverconnectform1" method="post" action="/api/usuarios/adduser" dmx-generator="bootstrap5" dmx-form-type="horizontal">
                <div class="form-group mb-3 row">
                    <label for="inp_nome" class="col-sm-2 col-form-label">Nome</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inp_nome" name="nome" aria-describedby="inp_nome_help" placeholder="Enter Nome" required="">
                        <small id="inp_nome_help" class="form-text text-muted">Your input is very valuable.</small>
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <label for="inp_email" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inp_email" name="email" aria-describedby="inp_email_help" placeholder="Enter Email" required="" data-rule-email="">
                        <small id="inp_email_help" class="form-text text-muted">Your input is very valuable.</small>
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <label for="inp_senha" class="col-sm-2 col-form-label">Senha</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inp_senha" name="senha" aria-describedby="inp_senha_help" placeholder="Enter Senha">
                        <small id="inp_senha_help" class="form-text text-muted">Your input is very valuable.</small>
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <label for="inp_cargo" class="col-sm-2 col-form-label">Cargo</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inp_cargo" name="cargo" aria-describedby="inp_cargo_help" placeholder="Enter Cargo">
                        <small id="inp_cargo_help" class="form-text text-muted">Your input is very valuable.</small>
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <div class="col-sm-2">&nbsp;</div>
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary" dmx-bind:disabled="state.executing" dmx-on:click="serverconnectform1.reset();notifies1.success('UsuÃ¡rio cadastrado com sucesso!')">Save <span class="spinner-border spinner-border-sm" role="status" dmx-show="state.executing"></span></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>